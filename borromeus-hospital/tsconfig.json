{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@constants/*": ["constants/*"],
      "@controllers/*": ["controllers/*"],
      "@db/*": ["db/*"],
      "@middleware/*": ["middleware/*"],
      "@routes/*": ["routes/*"],
      "@type/*": ["type/*"],
      "@validator/*": ["validator/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
